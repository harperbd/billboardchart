<h1><%= @billboard.name %></h1>

    <% @billboard.songs.order('ranking').each do |song| %>
      <% billboard_song_ranking = song.billboard_song_rankings.find { |ranking|
          @billboard.id == ranking.billboard_id && song.id == ranking.song_id
      } %>
      <%= "#{billboard_song_ranking.ranking}" %>
      <%= "Title: #{song.title}" %>
      <%= "Artist: #{song.artist.name}" %>
      <%= link_to "Remove from Billboard", billboard_song_ranking, method: :delete  %>
      <br/>
    <% end %>

  | <%= link_to "Add Song To List", new_billboard_billboard_song_ranking_path(@billboard.id) %>
  | <%= link_to "Delete List", @billboard, method: :delete %>
